{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <style>
        /* Additional styles for the background image */
        .background-image {
            background-image: url('{{ asset('pictures/' ~ event.pictureUrl) }}');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card-overlay {
            background-color: rgba(0, 0, 0, 0.5); /* Adjust opacity as needed */
            padding: 20px;
            color: white;
            text-align: center;
        }
        .button-row {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }
        /* Style for buttons */
        .btn {
            margin: 10px;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="background-image">
        <div class="card-overlay">
            <h1>Welcome to</h1>
            <h2>{{ event.name }}</h2>
            <p>{{ event.description }}</p>
            <p>Date & Time: {{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</p>
            <p>Location: {{ event.streetName }}, {{ event.cityName }},  {{ event.zip }}</p>
             <p>Capacity: {{ event.capacity }}, Type:  {{ event.type }} </p>
            <p>Contact: {{ event.email }} | {{ event.phoneNumber }}</p>

            <div class="button-row">
                <a class="btn btn-warning" href="{{ path('app_events_index') }}">Back to Events List</a>
                <a class="btn btn-success" href="{{ path('app_events_edit', {'id': event.id}) }}">Edit Event</a>
                {{ include('events/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
