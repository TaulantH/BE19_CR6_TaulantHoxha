{% extends 'base.html.twig' %}

{% block title %}New Events{% endblock %}

{% block body %}
    <div class="container">
       {{ form_start(form) }}
        <h1 class="text-center mt-4">Create new Event</h1>
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.date_time) }}
                {{ form_row(form.description) }}
                {{ form_row(form.pictureUrl) }}
                {{ form_row(form.capacity) }}
                {{ form_row(form.email) }}
                </div>
                  <div class="col-md-6">
                {{ form_row(form.phone_number) }}
                {{ form_row(form.street_name) }}
                {{ form_row(form.zip) }}
                {{ form_row(form.city_name) }}
                {{ form_row(form.url) }}
                {{ form_row(form.type) }}
              
            </div>
        </div>
        <div class="text-center mt-3">
         <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            <a href="{{ path('app_events_index') }}" class="btn btn-primary">Back to list</a>
        </div>
          {{ form_end(form) }}
    </div>
{% endblock %}
